keys
  main auto double int struct break else long switch
  case enum register typedef char extern return union
  continue for signed void do if static while
  default goto sizeof volatile const float short unsigned
end keys

define preprocessor
    '#[id] '< [id]'.h '>
  | '#[id] '< [id]'.c '>
end define

define type
    'int
  | 'float
  | 'double
  | 'char
  | 'void
end define

define variable
    [id]
  | [mem_op] [id]
end define

define expression
    [variable]
  | [number]
  | [stringlit]
  | [charlit]
  | [sign] [expression]
  | '([expression]')
  | [expression] [arithmetic_op] [expression]
end define

define comparison
    [expression]
  | [expression] [compare_op] [expression]
end define

define declaration
    [type] [list variable]';
end define

define assignment
    [variable] [assign_op] [expression]';
end define

define function_call
    [variable]'([list expression]')';
end define

define condition
    'if '([comparison]')
  | 'else
  | 'else if '([comparison]')
end define

define statement
    [declaration]
  | [assignment]
  | [function_call]
end define

define if_struct
    [condition] {
        [repeat block]
    }
end define

define body
  int main() {
    [repeat block]
  }
end define

define block
    [repeat statement]
  | [repeat if_struct]
end define
